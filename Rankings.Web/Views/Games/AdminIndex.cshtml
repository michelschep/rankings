@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model IEnumerable<Rankings.Web.Models.GameViewModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GameType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameFirstPlayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameSecondPlayer)
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.ActionLink(item.RegistrationDate, "Edit", new {  id=item.Id  })
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GameType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Venue)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameFirstPlayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameSecondPlayer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ScoreFirstPlayer)- @Html.DisplayFor(modelItem => item.ScoreSecondPlayer)
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id=item.Id  })
            </td>
        </tr>
}
    </tbody>
</table>
