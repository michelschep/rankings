@using Microsoft.AspNetCore.Authorization
@model IEnumerable<Rankings.Web.Models.GameViewModel>
@inject IAuthorizationService AuthorizationService

<p>
    <a asp-action="Create">Register new game</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegistrationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameFirstPlayer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NameSecondPlayer)
            </th>
            <th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameFirstPlayer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NameSecondPlayer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ScoreFirstPlayer) - @Html.DisplayFor(modelItem => item.ScoreSecondPlayer)
                </td>
                <td>
                    @if ((await AuthorizationService.AuthorizeAsync(User, item.Id, "GameEditPolicy")).Succeeded)
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
