@using System.Runtime.ExceptionServices
@model Rankings.Web.Models.WhatIfModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">RanKINGS</h1>

    <a class="nav-link" asp-area="" asp-controller="Games" asp-action="Create">Register your games!</a>
</div>


<div class="row">
    <div class="col-md-4">
        <form asp-action="WhatIf">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RatingPlayer1" class="control-label"></label>
                <input asp-for="RatingPlayer1" class="form-control" />
                <span asp-validation-for="RatingPlayer1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RatingPlayer2" class="control-label"></label>
                <input asp-for="RatingPlayer2" class="form-control" />
                <span asp-validation-for="RatingPlayer2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameScore1" class="control-label"></label>
                <input asp-for="GameScore1" class="form-control" />
                <span asp-validation-for="GameScore1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GameScore2" class="control-label"></label>
                <input asp-for="GameScore2" class="form-control" />
                <span asp-validation-for="GameScore2" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedToWinSet" class="control-label"></label>
                <input readonly="readonly" asp-for="ExpectedToWinSet" class="form-control" />
                <span asp-validation-for="ExpectedToWinSet" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpectedToWinGame" class="control-label"></label>
                <input readonly="readonly" asp-for="ExpectedToWinGame" class="form-control" />
                <span asp-validation-for="ExpectedToWinGame" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Delta" class="control-label"></label>
                <input readonly="readonly" asp-for="Delta" class="form-control" />
                <span asp-validation-for="Delta" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="What If" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>