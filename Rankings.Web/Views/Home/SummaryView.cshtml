@model IEnumerable<Rankings.Web.Controllers.Summary>

<table class="table table-striped table-dark">
    <thead>
        <tr class="rankinglinehor">
            <th class="rankinglinevert rankinglinehor">
            </th>
            <th>
                🥇
            </th>
            <th class="rankinglinevert">
            </th>
            <th>
                🥈
            </th>
            <th class="rankinglinevert" >
            </th>
            <th>
               🥉 
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="rankinglinevert">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name1)
            </td>
