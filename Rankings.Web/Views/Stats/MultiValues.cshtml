@model Rankings.Web.Controllers.ViewItems

@{
    ViewData["Title"] = @ViewBag.Title;
}
<h3>@ViewBag.Title</h3>
<table class="table table-striped table-dark" style="table-layout: fixed;">
    <thead>
    <tr>
        <th style="width: 20px;">Index</th>
        <th style="width: 300px;">Name</th>
        @foreach (var header in Model.Headers)
        {
            <th style="width: 50px;">@header</th>
        }
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.Values)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Index)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            @foreach (var score in item.Scores)
            {
                <td>
                    @Html.DisplayFor(m => score)
                </td>
            }
        </tr>
    }
    </tbody>
</table>